<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/m_e_verifier_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/m_e_verifier_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/m_e_pss_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Msafiri:"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/m_e_pss_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Mziwanda John Juma Hassan"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/m_e_pss_title"
                app:layout_constraintStart_toEndOf="@+id/m_e_pss_title"
                app:layout_constraintTop_toTopOf="@+id/m_e_pss_title" />

            <TextView
                android:id="@+id/m_e_payer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mlipaji:"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/m_e_pss_title"
                app:layout_constraintTop_toBottomOf="@+id/m_e_pss_title" />

            <TextView
                android:id="@+id/m_e_payer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Joel Lukamba John"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/m_e_payer_title"
                app:layout_constraintStart_toEndOf="@+id/m_e_payer_title"
                app:layout_constraintTop_toTopOf="@+id/m_e_payer_title" />

            <TextView
                android:id="@+id/m_e_confirmation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Namba ya Uhakiki:"
                app:layout_constraintStart_toStartOf="@+id/m_e_payer_title"
                app:layout_constraintTop_toBottomOf="@+id/m_e_payer_title" />

            <TextView
                android:id="@+id/m_e_confirmation_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="23ed9wh232"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/m_e_confirmation_title"
                app:layout_constraintStart_toEndOf="@+id/m_e_confirmation_title"
                app:layout_constraintTop_toTopOf="@+id/m_e_confirmation_title" />

            <LinearLayout
                android:id="@+id/m_e_button_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorBackgroundGreen"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/m_e_unpaid_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="haijalipiwa"
                    android:textColor="#F44336" />

                <Button
                    android:id="@+id/m_e_paid_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="imelipiwa"
                    android:textColor="#009688" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/m_e_button_container"
                app:layout_constraintEnd_toEndOf="@+id/m_e_button_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/m_e_button_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>