<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/m_p_mid_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/m_ticket_pss_mid_card"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/m_p_mid_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundWhite">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/m_p_mid_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/onboard3"
                app:civ_border_color="@color/colorBackgroundWhite"
                app:civ_border_width="4dp"
                app:civ_shadow="false"
                app:civ_shadow_radius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/m_p_mid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Annastazia M. Mendez"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/m_p_mid_photo"
                app:layout_constraintTop_toTopOf="@+id/m_p_mid_photo" />

            <TextView
                android:id="@+id/m_p_mid_phone_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:text="Simu:"
                android:textColor="@color/colorTransparentWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/m_p_mid_photo"
                app:layout_constraintTop_toBottomOf="@+id/m_p_mid_name" />

            <TextView
                android:id="@+id/m_p_mid_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0743809705"
                android:textColor="#009688"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/m_p_mid_phone_number_title"
                app:layout_constraintStart_toEndOf="@+id/m_p_mid_phone_number_title"
                app:layout_constraintTop_toTopOf="@+id/m_p_mid_phone_number_title" />

            <TextView
                android:id="@+id/m_p_mid_bus_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="basi:"
                android:textColor="@color/colorTransparentWhite"
                app:layout_constraintBottom_toBottomOf="@+id/m_p_mid_phone_number_title"
                app:layout_constraintStart_toEndOf="@+id/m_p_mid_phone"
                app:layout_constraintTop_toTopOf="@+id/m_p_mid_phone_number_title" />

            <TextView
                android:id="@+id/m_p_mid_bus_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TJZ 2132"
                android:textColor="#009688"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/m_p_mid_bus_number_text"
                app:layout_constraintStart_toEndOf="@+id/m_p_mid_bus_number_text"
                app:layout_constraintTop_toTopOf="@+id/m_p_mid_bus_number_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>